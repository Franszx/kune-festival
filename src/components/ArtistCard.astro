---
const { size, size2, name, genre, image, id } = Astro.props;
---

<div class="card" data-size={size}>
  <p class="name">{name}</p>
  <p class="genre">{genre}</p>
  <img src={image} alt="" />
</div>
<!-- <script>
  {
    document.querySelector(".card").style.cssText += `background-image: url(${image})`;
  }
</script> -->
<style>
  .card {
    position: relative;
    /* background-color: #fff; */
    /* background-image: url({image}); */
    /* background-image: url(/img/COLOURBOX3764379.jpg); */
    /* background-size: cover; */
    /* background-position: center; */
    overflow: hidden;
    aspect-ratio: 1/1;
    border-radius: 50%;
  }
  img {
    width: 100%;
    height: auto;
    position: relative;
    scale: 175%;
    top: -10%;
    transition: 0.3s ease-in;
  }
  p {
    color: var(--white);
    font-family: var(--ff-head);
    font-weight: var(--fw-b);
    z-index: 2;
  }
  .name {
    position: relative;
    top: 60%;
    text-align: center;
    transition: 0.3s ease-out;
  }
  .genre {
    position: relative;
    text-align: center;
    top: 90%;
    transition: 0.3s ease-out;
  }
  .card:hover .name {
    top: 45%;
    font-size: 110%;
  }
  .card:hover .genre {
    top: 48%;
    font-size: 110%;
  }
  .card:hover {
    filter: opacity(0.7);
  }
  .card:hover img {
    transform: scale(1.1);
  }
  .card:hover:after {
    content: "";
    position: absolute;
    display: block;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(107, 107, 107, 0.5);
    border-radius: 50%;
  }
  .card:hover p {
    opacity: 1;
    color: var(--black);
  }
  [data-size="large"] {
    width: 22rem;
    font-size: 2.5rem;
  }
  [data-size="medium"] {
    width: 15rem;
    font-size: 1.8rem;
  }
  [data-size="small"] {
    width: 8rem;
    font-size: 1rem;
  }

  @media (max-width: 1100px) {
    [data-size="large"] {
      width: 18rem;
      font-size: 1.6rem;
    }
    [data-size="medium"] {
      width: 12rem;
      font-size: 1rem;
    }
    [data-size="small"] {
      width: 6rem;
      font-size: 0.5rem;
    }
  }

  @media (max-width: 930px) {
    .card {
      width: 16rem;
      font-size: 1.7rem;
    }
  }
  @media (max-width: 375px) {
    img {
      max-width: 300px;
    }
  }
</style>
