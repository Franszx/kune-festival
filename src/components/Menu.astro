<div class="menu_container">
  <div class="burger">
    <div class="bar"></div>
  </div>
</div>
<script src="../scripts/burger.js"></script>
<style>
  .burger {
    position: relative;
    z-index: 90;
    display: block;
    /* width: 4rem; */
    width: 3rem;
    padding: 0;
    cursor: pointer;
    appearance: none;
    background: none;
    outline: none;
    border: none;
  }
  .burger .bar,
  .burger::before,
  .burger::after {
    content: "";
    display: block;
    width: 100%;
    height: 5px;
    border-radius: 5px;
    background-color: var(--white);
    /* margin: 0 0 11px 0px; */
    margin: 0 0 9px 0px;
    transition: 0.8s;
  }
  .burger:hover::before,
  .burger:hover::after,
  .burger:hover .bar {
    background-color: var(--button-green);
  }
  .burger::after {
    margin: 0;
  }
  .burger.is-active::before {
    transform: rotate(45deg) translate(10px, 12px);
    /* background: var(--button-green); */
  }
  .burger.is-active::after {
    transform: rotate(-45deg) translate(7px, -11px);
    /* background: var(--button-green); */
  }
  /* .burger.is-active::after {
    transform: rotate(-45deg) translate(10px, -11px);
  } */
  .burger.is-active .bar {
    opacity: 0;
    /* background: blue; */
  }
  @media (max-width: 450px) {
    .burger {
      width: 2.5rem;
    }
    .burger .bar,
    .burger::before,
    .burger::after {
      height: 3px;
      margin: 0 0 7px 0px;
    }
    .burger.is-active::before {
      transform: rotate(45deg) translate(7px, 7px);
    }
    .burger.is-active::after {
      transform: rotate(-45deg) translate(6px, -8px);
    }

</style>
