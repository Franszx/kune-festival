<div>
  <p id="days"></p>

  <p id="hours"></p>

  <p id="mins"></p>

  <p id="secs"></p>

  <!-- <h2 id="end"></h2> -->
</div>

<style>
  div {
    display: flex;
    justify-content: center;
    position: relative;
    z-index: 2;
    margin: 2rem 0;
    /* height: 225px; */
    /* left: 23%; = skaber horizontal scrolling, nedenunder fixer*/
  }

  p {
    /* margin: 1%; */
    /* font-size: 500%; */
    font-size: 5rem;
    font-family: var(--ff-text);
    font-weight: var(--fw-b);
    text-shadow: #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px;
    color: rgb(227, 227, 227);
  }
  div > * {
    min-width: 10rem;
    text-align: end;
  }
  #days::after,
  #hours::after,
  #mins::after,
  #secs::after {
    position: absolute;
    font-size: 2rem;
    color: var(--white);
  }
  #days::after {
    content: "D";
  }
  #hours::after {
    content: "H";
  }
  #mins::after {
    content: "M";
  }
  #secs::after {
    content: "S";
  }
  @media (max-width: 930px) {
    div > * {
      min-width: 8rem;
      text-align: end;
    }
    p {
      font-size: 4rem;
    }
  }
  @media (max-width: 750px) {
    div > * {
      min-width: 6rem;
      text-align: end;
    }
    p {
      font-size: 3rem;
      margin: 0;
    }
    #days::after,
    #hours::after,
    #mins::after,
    #secs::after {
      position: absolute;
      font-size: 1.5rem;
      color: var(--white);
    }
  }
  @media (max-width: 450px) {
    div > * {
      min-width: 5rem;
      text-align: end;
    }
    p {
      font-size: 2.5rem;
      margin: 0;
    }
    #days::after,
    #hours::after,
    #mins::after,
    #secs::after {
      position: absolute;
      font-size: 1.5rem;
      color: var(--white);
    }
  }
  @media (max-width: 375px) {
    div > * {
      min-width: 4rem;
      text-align: end;
    }
    p {
      font-size: 2rem;
      margin: 0;
    }
    div {
      margin: 0.5rem 0;
    }
    #days::after,
    #hours::after,
    #mins::after,
    #secs::after {
      position: absolute;
      font-size: 1rem;
      color: var(--white);
    }
  }
</style>

<script>
  // The data/time we want to countdown to
  var countDownDate = new Date("Jul 19, 2023 12:00:00").getTime();

  // Run myfunc every second
  var myfunc = setInterval(function () {
    var now = new Date().getTime();
    var timeleft = countDownDate - now;

    // Calculating the days, hours, minutes and seconds left
    var days = Math.floor(timeleft / (1000 * 60 * 60 * 24));
    var hours = Math.floor((timeleft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes = Math.floor((timeleft % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((timeleft % (1000 * 60)) / 1000);

    // Result is output to the specific element
    document.getElementById("days").innerHTML = days;
    document.getElementById("hours").innerHTML = hours < 10 ? "0" + hours : hours;
    document.getElementById("mins").innerHTML = minutes < 10 ? "0" + minutes : minutes;
    document.getElementById("secs").innerHTML = seconds < 10 ? "0" + seconds : seconds;
    // document.getElementById("hours").innerHTML = hours < 10 ? "0" + hours : hours;
    // document.getElementById("mins").innerHTML = minutes < 10 ? "0" + minutes : minutes;
    // document.getElementById("secs").innerHTML = seconds < 10 ? "0" + seconds : seconds;

    // Display the message when countdown is over
    if (timeleft < 0) {
      clearInterval(myfunc);
      document.getElementById("days").innerHTML = "";
      document.getElementById("hours").innerHTML = "";
      document.getElementById("mins").innerHTML = "";
      document.getElementById("secs").innerHTML = "";
      document.getElementById("end").innerHTML = "Welcome!";
    }
  }, 1000);
</script>
