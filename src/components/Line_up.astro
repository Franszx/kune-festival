---
import { toAttributeString } from "astro/dist/runtime/server/render/util";
---

<div class="container">
  <div class="box">
    <div class="artist image-container">
      <img src="img/COLOURBOX3764379.jpg" alt="" />
      <div class="artist_name">
        <a href="#">Smokey</a>
        <div>
          <p>New Wave</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin: auto;
  }

  .box {
    max-width: 500px;
    min-height: 250px;
    position: absolute;
    cursor: pointer;
  }

  .artist {
    width: 404px;
    height: 404px;
    position: absolute;
    overflow: hidden;
    border-radius: 200%;
    float: right;
  }

  .artist img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    transition: opacity 0.5s;
    z-index: 2;
    border-radius: 200%;
  }

  .artist:hover img {
    opacity: 0.7;
    border-radius: 200%;
  }

  .image-container:hover:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(107, 107, 107, 0.5);
    border-radius: 200%;
    z-index: 1;
  }

  .artist_name {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 20%;
    margin-top: 60%;
    text-align: center;
    transition: transform 0.3s ease-out;
    transform: translateY(30%);
  }

  .image-container:hover .artist_name {
    transform: translateY(-130%);
  }

  .artist_name a {
    color: white;
    width: 269px;
    height: 78px;
    font-style: normal;
    font-weight: 700;
    font-size: 64px;
    line-height: 78px;
    margin-bottom: 20px;
  }

  /*.artist_name a:hover {
    color: #383800;
    transition: color 0.3s ease-out;
    margin-bottom: 20%;
  }*/

  .image-container:hover .artist_name a {
    color: black;
  }

  .artist_name div {
    color: white;
    font-weight: 700;
    font-size: 64px;
    line-height: 78px;
    line-height: 30px;
    margin-top: 20px;
    opacity: 0;
    margin-bottom: 0;
    transition: opacity 0.3s ease-out;
  }

  .image-container:hover .artist_name div {
    opacity: 1;
    transform: translateY(-100%);
    transition: opacity 0.3s ease-out, transform 0.3s ease-out;
    margin-top: 15%;
    color: black;
  }
</style>
