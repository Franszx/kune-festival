    }

    .ninth_card {
      grid-column: 3;
      margin-top: 0%;
      margin-left: 12%;
    }
  }

  @media (max-width: 1080px) {
    .landing_content {
      top: 26%;
      font-size: 180%;
      left: 44%;
      right: 5%;
    }

    .second p::after {
      content: "BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW";
    }

    .fourth h1 {
      font-size: 490%;
    }
  }

  @media (max-width: 930px) {
    .landing_content {
      top: 26%;
      font-size: 140%;
      left: 44%;
      right: 5%;
    }
    .second p::after {
      content: "BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW / BUY TICKET NOW";
    }

    .fourth h1 {
      font-size: 430%;
    }

    .fourth {
      margin-left: 0;
      margin-right: 0;
      width: 80%;
      background-color: #f6d7b0;
      background-image: url("/img/line_upLanding.png");
      background-size: cover;
      background-repeat: no-repeat;
    }

    .boks {
      grid-template-columns: 1fr;
    }
    .streg {
      display: none;
    }

    .first_card,
    .second_card,
    .third_card,
    .fourth_card,
    .fifth_card,
    .sixth_card,
    .seventh_card,
    .eighth_card,
    .ninth_card {
      grid-column: 1;
      margin: 0;
      place-self: center;
    }
  }
</style>
