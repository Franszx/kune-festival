    position: relative;
  }
  .leftside :nth-child(2n + 2) {
    justify-self: left;
    position: relative;
  }
  .rightside :nth-child(2n + 1) {
    justify-self: right;
    position: relative;
  }
  .rightside :nth-child(2n + 2) {
    justify-self: left;
    position: relative;
  }
  .line {
    width: 5px;
    height: 100%;
    border-radius: 3px;
