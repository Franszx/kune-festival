    #cloud_layer img {
      scale: 0.8;
    }
  }
  @media (max-width: 930px) {
    .leftside {
      width: 90%;
      grid-template-rows: repeat(7, 17rem);
    }
    .rightside {
      width: 90%;
      grid-template-rows: repeat(8, 17rem);
    }
    h2 {
      padding-top: 9rem;
      font-size: 2.5rem;
      padding-right: 0.5rem;
    }
    .solh1 img {
