<Layout title="Line-up">
  <main>
    <div id="cloud_layer">
      <img src="/img/cloud_3.webp" alt="" />
      <img src="/img/cloud_1.webp" alt="" />
      <img src="/img/cloud_2.webp" alt="" />
      <img src="/img/cloud_3.webp" alt="" />
      <img src="/img/cloud_1.webp" alt="" />
      <img src="/img/cloud_3.webp" alt="" />
      <img src="/img/cloud_2.webp" alt="" />
      <img src="/img/cloud_3.webp" alt="" />
      <img src="/img/cloud_1.webp" alt="" />
      <img src="/img/cloud_1.webp" alt="" />
      <img src="/img/cloud_3.webp" alt="" />
      <img src="/img/cloud_2.webp" alt="" />
    </div>
    <div id="top_layer">
      <h2>19/7-23/7</h2>
      <div class="solh1">
        <img src="/img/sol.webp" alt="" />
        <h1>LINE-UP</h1>
      </div>
      <div class="artist_grid">
        <div class="line"></div>
        <div class="leftside">
          {
            data.map((act) => {
              return (
                <a href="#">
                  <ArtistCard image={act.image} name={act.name} genre={act.genre} size={act.size} />
                </a>
              );
            })
          }
        </div>
        <div class="rightside">
          {
            data2.map((act) => {
              return (
                <a href="#">
                  <ArtistCard image={act.image} name={act.name} genre={act.genre} size={act.size} />
                </a>
              );
            })
          }
        </div>
      </div>
      <Program />
      <p>COUNTDOWN</p>
      <div class="cd"><Countdown /></div>
    </div>
  </main>
</Layout>

<script>
  document.getElementById("cloud_layer").style.maxHeight = document.getElementById("top_layer").style.height;
  console.log(document.getElementById("top_layer").style.height);
</script>

