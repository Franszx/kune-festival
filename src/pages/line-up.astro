  #cloud_layer :nth-child(7) {
    top: 54%;
    left: 35%;
  }
  #cloud_layer :nth-child(9) {
    top: 68%;
    right: 2%;
  }
  #cloud_layer :nth-child(8) {
    top: 68%;
    left: 8%;
